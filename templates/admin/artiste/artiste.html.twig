{% extends 'admin/base.html.twig' %}

{% block title %}Liste Artistes{% endblock %}

{% block contenu %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container">
        <h1>CRUD Artistes</h1>

        {% if artistes is not empty %}
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom de scene</th>
                    <th scope="col">Style</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                {% for artiste in artistes %}
                    <tbody>
                    <tr>
                        <th scope="row">{{ artiste.id }}</th>
                        <td>{{ artiste.nomScene}}</td>
                        <td>{{ artiste.style }} </td>
                        <td>
                            <a href="{{ path('app_admin_artiste_modifier', {id:artiste.id }) }}"
                               class="btn btn-primary btn-sm">Modifier</a>
                            <a href="{{ path('app_admin_artiste_supprimer', {id:artiste.id}) }}"
                               class="btn btn-danger btn-sm"  onclick="return confirm('Êtes vous sur de supprimer ');">Supprimer</a>
                        </td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>

        {% else %}
            <h1>Il n'y a aucun artiste à afficher :) !</h1>
        {% endif %}

        <div class="example-wrapper">
            <a href="{{ path('app_admin_artiste_ajouter') }}">
                <button style="margin: 10px;" class="btn btn-success" href="" type="submit">Ajouter un artiste</button>
            </a>
        </div>
    </div>
{% endblock %}
