{% extends 'admin/base.html.twig' %}

{% block title %}Liste Departements{% endblock %}

{% block contenu %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container">
    <h1>CRUD Départements</h1>

        {% if departements is not empty %}
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Numero</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                {% for departement in departements %}
                    <tbody>
                    <tr>
                        <th scope="row">{{ departement.id }}</th>
                        <td>{{ departement.nom}}</td>
                        <td>{{ departement.numero }} </td>
                        <td>
                            <a href="{{ path('app_admin_departement_modifier', {id:departement.id }) }}"
                               class="btn btn-primary btn-sm">Modifier</a>
                            <a href="{{ path('app_admin_departement_supprimer', {id:departement.id}) }}"
                               class="btn btn-danger btn-sm"  onclick="return confirm('Êtes vous sur de supprimer ');">Supprimer</a>
                        </td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>

        {% else %}
            <h1>Il n'y a aucun département à afficher :) !</h1>
        {% endif %}

        <div class="example-wrapper">
            <a href="{{ path('app_admin_departement_ajouter') }}">
                <button style="margin: 10px;" class="btn btn-success" href="" type="submit">Ajouter un departement</button>
            </a>
        </div>
    </div>
{% endblock %}
