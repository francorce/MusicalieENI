{% extends 'admin/base.html.twig' %}

{% block title %}Liste Festivals{% endblock %}

{% block contenu %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container">

        <h1>CRUD Festivals</h1>
        {% if festivals is not empty %}
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Lieu</th>
                    <th scope="col">Affiche Festival</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                {% for festival in festivals %}
                    <tbody>
                    <tr>
                        <th scope="row">{{ festival.id }}</th>
                        <td>{{ festival.nom}}</td>
                        <td>{{ festival.description }} </td>
                        <td>{{ festival.lieu }} </td>

                        <td><img class="" style="height: 150px; width: 150px;" src="{{ asset('img/') }}{{ festival.photo }}"></td>
                        {#                        <td><img class="rounded-circle" style="height: 150px; width: 150px;" src="{{ asset('uploads/') }}{{ agent.photo }}"></td>}#}
                        <td>
                            <a href="{{ path('app_admin_festival_modifier', {id:festival.id }) }}"
                               class="btn btn-primary btn-sm">Modifier</a>
                            <a href="{{ path('app_admin_festival_supprimer', {id:festival.id}) }}"
                               class="btn btn-danger btn-sm"  onclick="return confirm('Êtes vous sur de supprimer ');">Supprimer</a>
                        </td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>

        {% else %}
            <h1>Il n'y a aucun festival à afficher :) !</h1>
        {% endif %}

        <div class="example-wrapper">
            <a href="{{ path('app_admin_festival_ajouter') }}">
                <button style="margin: 10px;" class="btn btn-success" href="" type="submit">Ajouter un festival</button>
            </a>
        </div>
    </div>
{% endblock %}
